<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <title>Create Listing</title>
</head>
    <body class="p-3 m-0 border-0">
        <center>
        <div class="create-listing-containter">
            
            <div class="header">
                <h1 id="createnewlabel"><center> Create New Listing</center></h1> 
            </div>


            <form id="postform" class="form-horizontal" id="create-form" method="POST" enctype="multipart/form-data" action='/Listing/createPost'>
                <div class="form-item">
                    <div class="form-item-left"><label class="form-label">Title</label></div>
                    <div class="form-item-right">
                      <input type="text" class="form-control" id="title" name="title"  placeholder="Enter Title Here..." required>
                    </div>
                </div>    

                <div class="form-item">
                    <div class="form-item-left"><label>Category</label></div>
                    <div class="form-item-right">
                        <select id="item-category" name="category" required>
                        <option value="Books">Books</option>
                        <option value="Electronics">Electronics</option>
                        <option value="Art">Art</option>
                        <option value="Movies">Movies</option>
                    </select>
                    </div>
                </div>

                <div class="form-item">
                    <div class="form-item-left"><label class="form-label">Item Description</label></div>
                    <div class="form-item-right">
                        <textarea class="form-control" id="item-description" name="description" rows="5" spellcheck="true" style="height: 44px; width: 330px"></textarea>
                    </div>  
                </div> 

                <div class="form-item" id="">
                   <div class="form-item-left"><label for="upload_photo">Upload Photo:</label></div> 
                   <div class="form-item-right">
                        <input id="uploadbutton" class="upload_photo" type="file" id="item-uploadImage" name="uploadImage" required>
                   </div>
                </div>

                <center><p id="pleaseallow" >* Please allow 1 - 3 days for the listing to be verified. You will be notified by email once post hard been verified.</p></center>
                </br>

                <div class="submit">
                    <input id="createlistingbutton" type="submit" id="submit-listing" value="Create Listing">
                </div>


            </form>
            
        </div>
        </center>

    </body>
</html>